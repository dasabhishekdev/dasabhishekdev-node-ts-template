{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root": ["."],
      "@src/*": ["src/*"],
      "@libs/*": ["libs/*"],

    },
  },
    
    "lib": ["es2015"],
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    
  }